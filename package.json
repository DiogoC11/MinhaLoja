{
  "name": "minha-loja",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "dev": "next dev -p 3000",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "next lint",
    "format": "prettier --write .",
    "prepare": "husky",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "validate": "npm run lint && npm run typecheck",
    "clean": "node -e \"const fs=require('fs');['.next','.next-dev'].forEach(d=>{try{fs.rmSync(d,{recursive:true,force:true})}catch(e){}})\"",
    "dev:clean": "npm run clean && next dev -p 3000"
  },
  "dependencies": {
    "next": "^14.2.5",
    "nodemailer": "^6.9.15",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "swr": "^2.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^18.2.79",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "husky": "^9.1.7",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.13",
    "typescript": "^5.6.2"
  }
}
